<Window x:Class="BankAppGUI.GetTypeOfCreatingAccount"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankAppGUI"
        mc:Ignorable="d"
        Title="Создание счета" MinHeight="200" MinWidth="300" Height="200" Width="300" Background="#696969">
    <Grid>
        <GroupBox Foreground="White" Header="Выберете тип счета" Padding="5">
            <StackPanel>
                <RadioButton x:Name="radioButtonDemand" Height="35" IsChecked="True" Margin="10,0,0,0" Foreground="white" >Расчетный</RadioButton>
                <RadioButton x:Name="radioButtonDeposit" Height="35" Margin="10,0,0,0" Foreground="white" >Депозитный</RadioButton>
                <TextBox x:Name="textBoxSumAccount"></TextBox>
                <Button Click="GetTypeOfAccount"
                    Width="80" Margin="3,15,3,3" Background="#A9A9A9" Foreground="white" >Создать</Button>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
