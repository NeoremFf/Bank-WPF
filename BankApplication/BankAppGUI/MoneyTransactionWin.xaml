<Window x:Class="BankAppGUI.MoneyTransactionWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankAppGUI"
        mc:Ignorable="d"
        Title="Транзакция" MinHeight="160" MinWidth="200" Height="160" Width="200" Background="#696969">
    <Grid>
        <StackPanel>
            <TextBlock Margin="8,0,0,0" Foreground="White">Введите сумму:</TextBlock>
            <TextBox x:Name="textBox_Sum" Height="50" Margin="5"></TextBox>
            <Button x:Name="button_Accept" Click="Button_Transaction"
                Background="#A9A9A9" Margin="7"
                Foreground="White" FontSize="20" >
                Пополнить
            </Button>
        </StackPanel>
    </Grid>
</Window>
